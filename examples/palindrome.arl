import lib.dio;

rule palindrome = (
    str : string
    | str.ToLower.left() == str.ToLower.right()
);

func main() {
    var text : string = "Bob";
    if (text is palindrome) {
        @dio:display.writeln("Yes!");
    }
}

` Other approach `

ret IsPalindrome(str : string) : boolean = (str.ToLower.left() == str.ToLower.right());

func main() {
    var text : string = "Bob";
    if (IsPalindrome(text)) {
        @dio:display.writeln("Yes!");
    }
}
